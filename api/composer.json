{
    "name": "miguel-devops/chatbot-demo-api",
    "description": "API Backend para Chatbot Demo con Slim Framework y arquitectura moderna",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": ">=7.4",
        "slim/slim": "4.*",
        "slim/psr7": "^1.6",
        "php-di/php-di": "^7.0",
        "vlucas/phpdotenv": "^5.6",
        "monolog/monolog": "^3.0"
    },
    "require-dev": {
        "mockery/mockery": "^1.6",
        "phpunit/phpunit": "^9.6"
    },
    "autoload": {
        "psr-4": {
            "ChatbotDemo\\": "src/",
            "ChatbotDemo\\Controllers\\": "src/Controllers/",
            "ChatbotDemo\\Services\\": "src/Services/",
            "ChatbotDemo\\Repositories\\": "src/Repositories/",
            "ChatbotDemo\\Middleware\\": "src/Middleware/",
            "ChatbotDemo\\Config\\": "src/Config/",
            "ChatbotDemo\\Exceptions\\": "src/Exceptions/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ChatbotDemo\\Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage"
    }
}
