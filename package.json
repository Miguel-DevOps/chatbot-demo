{
  "name": "chatbot-demo",
  "version": "1.0.0",
  "packageManager": "pnpm@10.17.1+sha512.17c560fca4867ae9473a3899ad84a88334914f379be46d455cbf92e5cf4b39d34985d452d2583baf19967fa76cb5c17bc9e245529d0b98745721aa7200ecaf7a",
  "description": "Modern chatbot compatible with PHP and React, portable and easy to integrate into any environment.",
  "author": "Miguel-DevOps",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Miguel-DevOps/chatbot-demo.git"
  },
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "pnpm generate-types && vite build",
    "lint": "eslint . && tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    
    "compose:dev": "docker compose -f docker-compose.base.yml -f docker-compose.dev.yml",
    "compose:test": "docker compose -f docker-compose.base.yml -f docker-compose.test.yml",
    "compose:prod": "docker compose -f docker-compose.base.yml -f docker-compose.prod.yml",

    "dev:up": "pnpm compose:dev up -d --build",
    "dev:down": "pnpm compose:dev down -v",
    "dev:logs": "pnpm compose:dev logs -f",
    "dev:restart": "pnpm compose:dev restart",

    "api:test": "pnpm compose:test run --rm api vendor/bin/phpunit",
    "api:test:unit": "pnpm compose:test run --rm api vendor/bin/phpunit tests/Unit",
    "api:test:integration": "pnpm compose:test run --rm api vendor/bin/phpunit tests/Integration",
    
    "security:php": "pnpm compose:test run --rm api composer audit",
    "security:js": "pnpm audit --audit-level=critical",

    "ci:test:all": "pnpm test && pnpm api:test",
    "ci:security": "pnpm security:js && pnpm security:php",

    "generate-types": "openapi-typescript openapi.yml --output src/types/api.generated.ts"
  },
